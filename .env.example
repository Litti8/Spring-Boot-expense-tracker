# =================================
# EXPENSE TRACKER - ENVIRONMENT VARIABLES TEMPLATE
# =================================
# Copy this file to .env and fill in your real values
# NEVER commit the real .env file

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=expense_tracker
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# =================================
# JWT CONFIGURATION
# =================================
# IMPORTANT: Generate a secure secret of at least 256 bits
# You can use: openssl rand -base64 64
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =================================
# FILE UPLOAD
# =================================
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# =================================
# EMAIL CONFIGURATION (Future use)
# =================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password
MAIL_FROM=noreply@expense-tracker.com

# =================================
# EXTERNAL APIs (future use)
# =================================
CURRENCY_API_KEY=your_currency_api_key_here
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json

# =================================
# LOGGING
# =================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/application.log

# =================================
# SPRING PROFILE
# =================================
SPRING_PROFILES_ACTIVE=dev